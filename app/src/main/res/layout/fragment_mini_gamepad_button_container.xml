<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout5"
    android:layout_width="match_parent"
    android:layout_height="450dp"
    app:layoutDescription="@xml/fragment_mini_gamepad_button_container_scene"
    tools:context=".high_level.MiniGamepadButtonContainerFragment">

    <ImageButton
        android:id="@+id/down_button"
        android:layout_width="59dp"
        android:layout_height="61dp"
        android:src="@android:drawable/radiobutton_off_background"
        app:layout_constraintStart_toEndOf="@+id/left_button"
        app:layout_constraintTop_toBottomOf="@+id/left_button" />

    <ImageButton
        android:id="@+id/b_button"
        android:layout_width="59dp"
        android:layout_height="61dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="68dp"
        android:background="#00FFFFFF"
        android:src="@drawable/b_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
        android:id="@+id/y_button"
        android:layout_width="59dp"
        android:layout_height="61dp"
        android:background="#00FFFFFF"
        android:src="@drawable/y_button"
        app:layout_constraintBottom_toTopOf="@+id/x_button"
        app:layout_constraintStart_toEndOf="@+id/x_button" />

    <ImageButton
        android:id="@+id/x_button"
        android:layout_width="59dp"
        android:layout_height="61dp"
        android:background="#00FFFFFF"
        android:src="@drawable/x_button"
        app:layout_constraintBottom_toTopOf="@+id/a_button"
        app:layout_constraintEnd_toStartOf="@+id/a_button" />

    <ImageButton
        android:id="@+id/right_button"
        android:layout_width="59dp"
        android:layout_height="61dp"
        android:src="@android:drawable/radiobutton_off_background"
        app:layout_constraintBottom_toTopOf="@+id/down_button"
        app:layout_constraintStart_toEndOf="@+id/down_button" />

    <ImageButton
        android:id="@+id/a_button"
        android:layout_width="59dp"
        android:layout_height="61dp"
        android:background="#00FFFFFF"
        android:src="@drawable/a_button"
        app:layout_constraintEnd_toStartOf="@+id/b_button"
        app:layout_constraintTop_toBottomOf="@+id/b_button" />

    <ImageButton
        android:id="@+id/up_button"
        android:layout_width="59dp"
        android:layout_height="61dp"
        android:src="@android:drawable/radiobutton_off_background"
        app:layout_constraintBottom_toTopOf="@+id/right_button"
        app:layout_constraintEnd_toStartOf="@+id/right_button" />

    <ImageButton
        android:id="@+id/left_button"
        android:layout_width="59dp"
        android:layout_height="61dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="86dp"
        android:layout_marginBottom="68dp"
        android:src="@android:drawable/radiobutton_off_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/left_joystick"
        app:layout_constraintVertical_bias="1.0" />

    <ImageButton
        android:id="@+id/l2_button"
        android:layout_width="70dp"
        android:layout_height="62dp"
        android:backgroundTint="#00FFFFFF"
        android:src="@drawable/l2_button"
        app:layout_constraintEnd_toStartOf="@+id/r2_button"
        app:layout_constraintHorizontal_bias="0.051"
        app:layout_constraintStart_toEndOf="@+id/l1_button"
        tools:layout_editor_absoluteY="7dp" />

    <ImageButton
        android:id="@+id/l1_button"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/l1_button"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="7dp" />

    <ImageButton
        android:id="@+id/r1_button"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/r1_button"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="7dp" />

    <ImageButton
        android:id="@+id/r2_button"
        android:layout_width="71dp"
        android:layout_height="63dp"
        android:layout_marginEnd="4dp"
        android:backgroundTint="#00FFFFFF"
        android:src="@drawable/r2_button"
        app:layout_constraintEnd_toStartOf="@+id/r1_button"
        tools:layout_editor_absoluteY="7dp" />

    <ImageButton
        android:id="@+id/start_button"
        android:layout_width="73dp"
        android:layout_height="25dp"
        android:layout_marginBottom="16dp"
        android:background="#00FFFFFF"
        android:src="@drawable/start_button"
        app:layout_constraintBottom_toTopOf="@+id/right_button"
        app:layout_constraintEnd_toStartOf="@+id/y_button"
        app:layout_constraintStart_toEndOf="@+id/up_button" />

    <ImageButton
        android:id="@+id/select_button"
        android:layout_width="76dp"
        android:layout_height="24dp"
        android:layout_marginBottom="8dp"
        android:background="#00FFFFFF"
        android:src="@drawable/select_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/a_button"
        app:layout_constraintStart_toEndOf="@+id/down_button"
        app:layout_constraintTop_toBottomOf="@+id/right_button"
        app:layout_constraintVertical_bias="0.6" />

    <ru.sfti.go1ctl.high_level.JoystickView
        android:id="@+id/left_joystick"
        android:layout_width="169dp"
        android:layout_height="165dp"
        android:layout_marginTop="36dp"
        android:background="#00FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/y_button"
        app:layout_constraintEnd_toStartOf="@+id/left_joystick2"
        app:layout_constraintHorizontal_bias="0.232"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/l1_button"
        app:layout_constraintVertical_bias="0.0" />

    <ru.sfti.go1ctl.high_level.JoystickView
        android:id="@+id/left_joystick2"
        android:layout_width="169dp"
        android:layout_height="165dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="16dp"
        android:background="#00FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/y_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/l1_button"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="178dp"
        android:layout_height="183dp"
        android:src="@drawable/d_pad"
        app:layout_constraintBottom_toBottomOf="@+id/down_button"
        app:layout_constraintEnd_toEndOf="@+id/right_button"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/left_button"
        app:layout_constraintTop_toTopOf="@+id/up_button"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>